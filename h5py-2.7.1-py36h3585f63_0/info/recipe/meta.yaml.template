{% set version = "2.7.1" %}

package:
  name: h5py
  version: {{ version }}

source:
  fn: h5py-{{ version }}.tar.gz
  url: https://github.com/h5py/h5py/archive/{{ version }}.tar.gz
  sha256: 55bdefda47c49973ec24384097d18eb5f84797c057aaf0bf0b6b0f7860ad43e7

build:
  number: 0

requirements:

  build:
    - {{ compiler('c') }}

  host:
    - hdf5
    - python
    - setuptools
    - numpy
    - cython
    - six
    - pkgconfig

  run:
    - hdf5
    - numpy
    - python
    - six
    - unittest2    # [py26]

test:
  imports:
    - h5py

about:
  home: http://www.h5py.org/
  license: BSD 3-Clause
  license_file: licenses/license.txt
  summary: Read and write HDF5 files from Python.
  description: |
    H5py uses straightforward NumPy and Python metaphors, like dictionary and
    NumPy array syntax.
  doc_url: http://docs.h5py.org
  dev_url: https://github.com/h5py/h5py

extra:
  recipe-maintainers:
    - jakirkham
    - pitrou
    - tacaswell
